{
  "languages": {
    "JavaScript": {
      "formatter": [],
      "language_servers": ["eslint", "typescript-language-server", "!vtsls"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": [],
      "language_servers": ["eslint", "typescript-language-server", "!vtsls"]
    },
    "Vue.js": {
      "formatter": [],
      "language_servers": ["eslint", "vue-language-server"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  }
}
