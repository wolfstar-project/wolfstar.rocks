{
  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.quickSuggestions": {
    "strings": "on"
  },

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Stylistic rules
  "eslint.rules.customizations": [
    { "rule": "style/*", "fixable": true },
    { "rule": "format/*", "fixable": true },
    { "rule": "*-indent", "fixable": true },
    { "rule": "*-spacing", "fixable": true },
    { "rule": "*-spaces", "fixable": true },
    { "rule": "*-order", "fixable": true },
    { "rule": "*-dangle", "fixable": true },
    { "rule": "*-newline", "fixable": true },
    { "rule": "*quotes", "fixable": true },
    { "rule": "*semi", "fixable": true }
  ],

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.autoSave": "onFocusChange", // optional but recommended,
  "tailwindCSS.experimental.classRegex": [["tw`(.*?)`", "tw\\('(.*?)'\\)", "tw\\(\\s*('(.*?)'|\"(.*?)\")\\s*\\)"]],
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "prisma.pinToPrisma6": true
}
